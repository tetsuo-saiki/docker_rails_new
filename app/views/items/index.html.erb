<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Tag1</th>
      <th>Tag2</th>
      <th>Tag3</th>
      <th>Status</th>
      <th>Price</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.tag1 %></td>
        <td><%= item.tag2 %></td>
        <td><%= item.tag3 %></td>
        <td><%= item.status %></td>
        <td><%= item.price %></td>
        <td><%= item.content %></td>
        <td><%= link_to 'Show', item, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: "btn btn-primary" %>
